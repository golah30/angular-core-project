acp-viewport
    .container('*ngIf'='!loading')
        .feed
            .card-container('*ngFor'='let quiz of quizzes')
                acp-card
                    .header
                        a.title('[routerLink]'="'/quizzes/'+quiz.id") {{quiz.name}}
                        .date
                            acp-timestamp('[date]'='quiz.updatedAt') 
                ng-container('*ngIf'='user$ | async as user')
                    .controls('*ngIf'='quiz.author === user._id || user.role === "admin"')
                        button.control.edit('*ngIf'='quiz.status === "draft"' '(click)'='onQuizEdit(quiz.id)')
                            i.icon-mode_edit
                        button.control.delete('(click)'='onQuizDelete(quiz.id)')
                            i.icon-close
    acp-quizz-sidebar